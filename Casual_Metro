local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

function DrawEsp(esp, color)
	local ESP = Instance.new("BillboardGui")
	local Highlight = Instance.new("Frame")
	local UI = Instance.new("UIStroke")

	ESP.Size = UDim2.new(0.5, 0, 0.5, 0)
	ESP.AlwaysOnTop = true
	ESP.Name = "Highlight"
	ESP.Parent = esp.Parent

	Highlight.Size = UDim2.new(1, 0, 1, 0)
	Highlight.Name = "Highlight"
	Highlight.Parent = ESP
	
	UI.Thickness = 5
	UI.Transparency = 0.5
	UI.Parent = Highlight
	
	if color == "epic" then
		Highlight.BackgroundColor3 = Color3.fromRGB(103, 0, 154)
	elseif color == "mef" then
		Highlight.BackgroundColor3 = Color3.fromRGB(161, 0, 3)
	elseif color == "lega" then
		Highlight.BackgroundColor3 = Color3.fromRGB(227, 227, 0)
	elseif color == "ult" then 
		Highlight.BackgroundColor3 = Color3.fromRGB(255, 2, 255)
	end
end

_G.ESP_Epic = false
_G.ESP_Mef = false
_G.ESP_Lega = false
_G.ESP_Ult = false

local EpicList = {
	"13122216162",
	"13779106850",
	"13214898748",
	"13399301724",
	"13469431089",
	"13118563657",
	"13214910323",
