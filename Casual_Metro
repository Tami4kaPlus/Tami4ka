}

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Casual-Metro",IntroText = "Casual Metro", HidePremium = false, SaveConfig = false, ConfigFolder = "Orion"})

function Notify(name,content,time)
	OrionLib:MakeNotification({
		Name = name,
		Content = content,
		Image = "rbxassetid://4483345998",
		Time = time
	})
end

Notify("Casual Metro","Version - 1.1.5", 5)

local Misc = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Esp = Window:MakeTab({
	Name = "ESP",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Info = Window:MakeTab({
	Name = "Information",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

Misc:AddButton({
	Name = "Players Colliders",
	Callback = function()
		if _G.Tami4ka == false then
			_G.Tami4ka = true
			
			for index, plr in Players:GetChildren() do
				plr.CharacterAppearanceLoaded:Connect(function(Char)
					for num, part in Char:GetDescendants() do
						if part:IsA("BasePart") then
							part.CollisionGroup = "Strings"
						end
					end
					Char.DescendantAdded:Connect(function(instance)
						if instance:IsA("BasePart") then
							instance.CollisionGroup = "Strings"
						end
					end)
				end)
			end
			
			Players.PlayerAdded:Connect(function(plr)
				plr.CharacterAppearanceLoaded:Connect(function(Char)
					for num, part in Char:GetDescendants() do
						if part:IsA("BasePart") then
							part.CollisionGroup = "Strings"
						end
					end
					Char.DescendantAdded:Connect(function(instance)
						if instance:IsA("BasePart") then
							instance.CollisionGroup = "Strings"
						end
					end)
				end)
			end)
			
			Notify("Successfully")
		else
			Notify("Working")
		end
		
		
	end
})

Misc:AddButton({
	Name = "Auto Jump Disable",
	Callback = function()
		local yes, no = pcall(function()
			localPlayer.Character.Humanoid.AutoJumpEnabled = false
		end)
		if no then
			Notify("Error: "..no)
		else
			Notify("Disabled")
		end
	end
})

Esp:AddToggle({
	Name = "Epic Clothing",
	Default = false,
	Callback = function(value)
		if value then 
			_G.ESP_Epic = true
			while _G.ESP_Epic do
				for i, v in workspace.Clothing:GetDescendants() do
					if v:IsA("Shirt") then
						if not v.Parent:FindFirstChild("Highlight") then
							for index, obj in pairs(EpicList) do
								if obj.ShirtTemplate == "rbxassetid://"..obj then
									DrawEsp(v, "epic")
								end
							end
						elseif v.Parent:FindFirstChild("Highlight") then
							if v.ShirtTemplate == "rbxassetid://1" then
								v.Parent.Highlight:Destroy()
							end
						end
					elseif v:IsA("Pants") then
						if not v.Parent:FindFirstChild("Highlight") then
							if v.PantsTemplate == "rbxassetid://14357291910" then
								DrawEsp(v, "epic")
							elseif v.PantsTemplate == "rbxassetid://13085933635" then
								DrawEsp(v, "epic")
							elseif v.PantsTemplate == "rbxassetid://12238831815" then
								DrawEsp(v, "epic")
							end
						elseif v.Parent:FindFirstChild("Highlight") then
							if v.PantsTemplate == "rbxassetid://1" then
								v.Parent.Highlight:Destroy()
							end
						end
					end
				end
				task.wait(1)
			end
		else
			_G.ESP_Epic = false
			for i, v in workspace.Clothing:GetDescendants() do
				if v:IsA("BillboardGui") then
					v:Destroy()
				end
			end
		end 
	end    
})

